<tr class='<%= task.parent? ? 'border-top' : '' %>'>
    <td class='<%= task.sub_task? ? 'ps-5' : '' %>'>
        <span class='text-<%= task.css_color %> pe-1'><%= task.symbol %></span>

        <% if task.done? %>
            <s class='text-muted'><%= task.description %></s>
        <%else%>
            <%= task.description %>
        <% end %>
    </td>
    
    <td><%= task.due_date %></td>

    <td class='links_content p-0 py-2'>
        <% if task.parent? %>
            <%= link_to '+ Sub-tarefa', new_task_path(parent_id: task.id), class: 'btn btn-success btn-sm', style: 'margin-right: 5px;'%>
        <% end %>
        <%= link_to 'Editar', edit_task_path(task), class: 'btn btn-secondary btn-sm', style: 'margin-right: 5px;'%>
        <%= button_to 'Apagar', task, method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: 'VocÃª tem certeza?'} %>
    </td>
</tr>